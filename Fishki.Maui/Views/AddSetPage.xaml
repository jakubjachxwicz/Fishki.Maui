<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fishki.Maui.Views.AddSetPage"
             Title="AddSetPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#e5e5e5">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label" x:Key="LeftSideLbl">
                <Setter Property="HorizontalTextAlignment" Value="End" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Margin="8" RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".4*" />
            <ColumnDefinition Width=".4*" />
            <ColumnDefinition Width=".2*" />
        </Grid.ColumnDefinitions>

        <Label Style="{StaticResource TitleLabel}"
               Grid.ColumnSpan="3"
               Text="Dodaj nowy zestaw"/>

        <Label Text="Nazwa:"
               Grid.Row="1"
               Style="{StaticResource LeftSideLbl}"/>
        <Label Text="Pierwszy język:"
               Grid.Row="2"
               Style="{StaticResource LeftSideLbl}"/>
        <Label Text="Drugi język:"
               Grid.Row="3"
               Style="{StaticResource LeftSideLbl}"/>

        <Entry Grid.Row="1"
               Grid.Column="1"
               Grid.ColumnSpan="2"
               Margin="20 ,0, 20, 0"
               FontAttributes="Bold"
               FontSize="Medium"/>

        <Picker Grid.Row="2"
                Grid.Column="1"
                Margin="20 ,0, 4, 0"
                ItemsSource="{Binding Languages}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding FirstSelectedLanguage}"
                SelectedIndexChanged="FirstLanguageChanged"
                FontAttributes="Bold"
                FontSize="Subtitle"/>

        <Picker Grid.Row="3"
                Grid.Column="1"
                Margin="20 ,0, 4, 0"
                ItemsSource="{Binding Languages}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding SecondSelectedLanguage}"
                SelectedIndexChanged="SecondLanguageChanged"
                FontAttributes="Bold"
                FontSize="Subtitle"/>

        <Border Grid.Row="2" Grid.Column="2"
                HeightRequest="40"
                WidthRequest="57"
                Stroke="White"
                StrokeThickness="3">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="2" />
            </Border.StrokeShape>
            <Image Source="{Binding FirstFlagUri}"
                   Aspect="Fill"/>
        </Border>
        <Border Grid.Row="3" Grid.Column="2"
                HeightRequest="40"
                WidthRequest="57"
                Stroke="White"
                StrokeThickness="3">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="2" />
            </Border.StrokeShape>
            <Image Source="{Binding SecondFlagUri}"
                   Aspect="Fill"/>
        </Border>

        <Button Text="Dodaj"
                Grid.Row="5"
                Style="{StaticResource BottomButton}"
                Command="{Binding AddButtonCommand}"
                Grid.ColumnSpan="3"/>
        <Button Text="Anuluj"
                Grid.Row="6"
                Grid.ColumnSpan="3"
                Style="{StaticResource BottomButton}"
                Command="{Binding CancelButtonCommand}"/>
    </Grid>
</ContentPage>